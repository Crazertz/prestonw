package NBHgames;


public class Bear extends Combatant 
{
	String name;
	point position;
	public Bear(String n, point p)
	{
		super(n,p);
	}
	
	public void move(String input)
		{
		String w = "w";
		String e = "e";
		String s = "s";
		String q = "q";
		if(input.equals(w))
			{
				position.x += 5;
			}
		if(input.equals(e))
			{
				position.y += 5;
			}
		if(input.equals(s))
			{
				position.x -= 5;
			}
		if(input.equals(q))
			{
				position.y -= 5;
			}
		}
}
